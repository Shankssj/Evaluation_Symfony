<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}PowerBuild
			{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

		{% endblock %}
	</head>

	<body>
		<nav class="navbar navbar-expand-lg navbar-light shadow-sm sticky-top">
			<div class="container position-relative">
				<a class="navbar-brand" href="{{ path('app_home') }}">PowerBuild</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse justify-content-center" id="navbarNav">
					<ul class="navbar-nav center-nav mb-2 mb-lg-0">


						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Administration
								</a>
								<ul
									class="dropdown-menu" aria-labelledby="adminDropdown">

									<!-- Sous-menu Utilisateurs -->
									<li>
										<h6 class="dropdown-header">Utilisateurs</h6>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_user_new') }}">Ajouter un utilisateur</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_user_index') }}">Modifier un utilisateur</a>
									</li>

									<li><hr class="dropdown-divider"></li>

									<!-- Sous-menu Produits -->
									<li>
										<h6 class="dropdown-header">Produits</h6>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_produits_new') }}">Ajouter un produit</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_produits_index') }}">Modifier un produit</a>
									</li>

								</ul>
							</li>

						{% endif %}
					</ul>

					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
						</li>
						<li class="nav-item">
								<a class="nav-link" href="{{ path('app_panier') }}">Mon Panier</a>
						</li>
						{% if not app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_register') }}">S’inscrire</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
							</li>
						{% else %}
							
							<li class="nav-item">
								<a class="nav-link text-danger" href="{{ path('app_logout') }}">Se déconnecter</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		<div class="container mt-4"> {% block body %}{% endblock %}
			</div>

			{% block javascripts %}
				 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
				{% block importmap %}
					{{ importmap('app') }}
				{% endblock %}
			{% endblock %}
		</body>
	</html>
