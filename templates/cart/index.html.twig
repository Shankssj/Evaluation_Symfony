{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items | length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for item in items %}
            <div class="col">
                <div class="card product-card h-100">
                    <img src="{{ item.produit.imageProduit }}" class="card-img-top" >
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ item.produit.nomProduit }}</h5>
                        <p class="card-text text-truncate">{{ item.produit.descriptionProduit|length > 100 ? item.produit.descriptionProduit|slice(0, 100) ~ '...' : item.produit.descriptionProduit }}</p>
                        <p class="fw-bold mt-auto mb-2"> - {{ item.quantity }} +</p>
                        <p class="fw-bold mt-auto mb-2">{{ item.produit.prixProduit }} €</p>
                        <div class="d-flex justify-content-between">
                            <a href="" class="btn btn-outline-danger btn-sm rounded-pill px-3">Détails</a>
                            <a href="{{ path('app_remove_panier', {'id': item.produit.id }) }}" class="btn btn-rose btn-sm rounded-pill px-3">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
    {% else %}
        <p>Surprise, c'est vide !</p>
    {% endif %}
    <div class="text-end mt-4">
        <h4>Total : {{ total }} €</h4>
        <a href="{{ path('app_panier_validate') }}" class="btn btn-rose btn-lg mt-2">
    Valider le panier
</a>

    </div>
    
{% endblock %}